<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Data do Aviso"
        android:id="@+id/tvDataAviso"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#FFF"
        android:textStyle="italic"
        android:typeface="serif"
        android:background="#CB9B1D"
        android:padding="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Descrição do Aviso"
        android:id="@+id/tvNomeAviso"
        android:layout_alignTop="@+id/tvDataAviso"
        android:layout_toRightOf="@+id/tvDataAviso"
        android:layout_toEndOf="@+id/tvDataAviso"
        android:layout_marginLeft="20dp"
        android:textColor="#000" />

</RelativeLayout>